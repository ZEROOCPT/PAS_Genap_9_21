<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:padding="19dp"
    android:gravity="center_horizontal">

    <!-- Arsya Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:paddingTop="20dp"
                android:id="@+id/picarsya"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/arsya" />

            <TextView
                android:id="@+id/txtarsya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Arsya Muhammad Faisyar"
                android:textColor="#4caf50"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtemailarsya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="arsyatampan20009@gmail.com"
                android:textColor="#4caf50" />

            <TextView
                android:id="@+id/txtnowaarsya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="+62 857-4171-3412"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/txtabsenarsya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Absen 9"
                android:textColor="#4caf50" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Naren Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:paddingTop="20dp"
                android:id="@+id/picnaren"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/naren" />

            <TextView
                android:id="@+id/txtnaren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made Narendra Dhanadyata Nurjaya/21"
                android:textColor="#4caf50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtemailnaren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="made.narendra.dhanadyatanurjaya@gmail.com"
                android:textColor="#4caf50"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtnowanaren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+62 811 3867 373"
                android:textColor="#4caf50"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtabsennaren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absen 21"
                android:textColor="#4caf50"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
